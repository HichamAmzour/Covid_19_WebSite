


@model Covid_19_WebSite.Models.Enumeration

@{
    ViewBag.Title = "Ajouter les nouveaux Résultats de COVID-19";
}

@*@section scripts {
    <script src="~/Scripts/script/JsScript.js"></script>
}*@

<h2 class="my-5">Ajouter les résultats dans cette formulaire</h2>


@using (Html.BeginForm("Create"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal row">
    <h4></h4>
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <hr />
    <div class="col-md-6">

        <div class="form-group">
            @Html.Label("ListRegions", "Régions", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ListRegions", null, "________________________________________", htmlAttributes: new { @class = "form-control" })
                @*   @Html.ValidationMessage("", "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UID_V, "Villes", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UID_V, new SelectList(new List<SelectListItem> { new SelectListItem { Selected = true, Text = "________________________________________", Value = "-1" } }, "", "Text"), htmlAttributes: new { @class = "form-control" })
                @*   @Html.ValidationMessageFor("listregion", "", new { @class = "text-danger" })*@
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Cas_Mort, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cas_Mort, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cas_Mort, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.Cas_Retablis, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cas_Retablis, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cas_Retablis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cas_Confirmer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cas_Confirmer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cas_Confirmer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date_Ins, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_Ins, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = DateTime.Now.ToShortDateString() } })
                @Html.ValidationMessageFor(model => model.Date_Ins, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ajouter" class="btn btn-success" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Liste", "Index", null, htmlAttributes: new { @class = "btn btn-outline-warning w-100" })
        </div>
    </div>
</div>
}



