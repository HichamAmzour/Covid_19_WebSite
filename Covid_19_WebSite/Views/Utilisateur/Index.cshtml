@model IEnumerable<Covid_19_WebSite.Models.Utilisateur>

@{
    ViewBag.Title = "Crée un utilisateur";
}

<h2 style="font-family:'Verdana', sans-serif"> Liste des utilisateur </h2>

<label class="@ViewBag.Class" style="@ViewBag.style">
    @ViewBag.msg
</label>

<div class="list-group mb-4">
    @using (Html.BeginForm("Index", "Utilisateur", FormMethod.Get, htmlAttributes: new { @class = "form-inline my-2 my-lg-0" }))
    {

        @Html.Editor("user", new { htmlAttributes = new { @class = "form-control mr-sm-2", placeholder = "Pseudo" } })
        @Html.Editor("email", new { htmlAttributes = new { @class = "form-control mr-sm-2", placeholder = "Email" } })

        <button type="submit" class="btn btn-outline-success my-2 my-sm-0 mr-5">Rechercher</button>

        @Html.ActionLink("Ajouter un utilisateur ", "Create", null, htmlAttributes: new { @class = "btn btn-outline-info ml-5" })
    }
</div>


@if (Model.Count() <= 0)
{
    <div class="alert alert-dismissible alert-info my-2">
        <p class="mb-0 my-2">Aucune résultat est trouver pour cette recherche essayer autres valeurs.</p>
    </div>

}
else
{
    <table class="table table-hover">
        <thead class="bg-warning">
        <th>
            Nom utilisateur
        </th>
        <th>
            Email
        </th>
        <th></th>
        </thead>

        @foreach (var item in Model)
        {
        <tr class="bg-secondary">
            <td>
                @Html.DisplayFor(modelItem => item.pseudo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.UID }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.UID })
            </td>
        </tr>
        }

    </table>
}
