@model Covid_19_WebSite.Models.Utilisateur

@{
    ViewBag.Title = "Supprimer";
}

<h2 class="my-5">Supprimer un Utilisateur </h2>


<div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4 class="alert-heading">Attention !!</h4>
    <p class="mb-0">Est ce que vous éte sure de supprimer cette utilisateur ?</p>
</div>

<div>

    <table class="table table-hover">
        <thead class="table-info">
        <th>
            @Html.DisplayNameFor(model => model.pseudo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        </thead>
        <tbody>
            <tr class="table-secondary">
                <td>
                    @Html.DisplayFor(model => model.pseudo)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
        </tbody>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Supprimer", "DeleteConfirmed", new { id = Model.UID }, htmlAttributes: new { @class = "btn btn-danger btn-outline mr-4 w-100" })
            @Html.ActionLink("Liste", "Index", null, htmlAttributes: new { @class = "btn btn-outline-warning w-100" })
        </div>
    }
</div>
