@model Covid_19_WebSite.Models.Ville

@{
    ViewBag.Title = "Details";
}



<div class="mt-2" style="display:flex;justify-content:center;flex-direction:column">
    <div class="text-center my-2">
        <h2 class="my-2">Détails de la ville séléctionner</h2>
    </div>

    <div style="display:flex;justify-content:space-evenly;align-items:center">
        <br />
        <div class="card border-success text-white bg-success mb-3" style="max-width: 20rem;flex:1">
            <div class="card-header">Nom de la Ville </div>
            <div class="card-body">
                <h4 class="card-title"> @Html.DisplayFor(model => model.Nom) </h4>
            </div>
        </div>

        <div class="card border-success card text-white bg-warning mb-3" style="max-width: 20rem;flex:1">
            <div class="card-header">La région auqelle la ville appartien </div>
            <div class="card-body">
                <h4 class="card-title">  @Html.DisplayFor(model => model.Region.Nom) </h4>
            </div>
        </div>
    </div>
    <div>
        <div class="form-group movebBtns">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Modifier", "Edit", new { id = Model.UID }, htmlAttributes: new { @class = "btn btn-success bt_w30" })
                @Html.ActionLink("Liste", "Index", null, htmlAttributes: new { @class = "btn btn-outline-warning ml-4 bt_w30" })
            </div>
        </div>

    </div>
 </div>
