@model Covid_19_WebSite.Models.Region
@{
    ViewBag.Title = "Région";
}

<h2 class="mt-5">Ajouter un nouveau région </h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal w50">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.Label("Nom de la région :", htmlAttributes: new { @class = "control-label ml-3" })
        <div class="col-md-10 ">
            @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger w50" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Liste", "Index", null, htmlAttributes: new { @class = "btn btn-outline-warning w-100" })
        </div>
    </div>

</div>
}
